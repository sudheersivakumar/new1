---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Bolt.diy">
  <main>
    <h1>Welcome to Bolt.diy</h1>
    <p>Your destination for DIY projects and resources.</p>
    <section>
      <h2>Featured Projects</h2>
      <ul>
        <li>Project 1</li>
        <li>Project 2</li>
        <li>Project 3</li>
      </ul>
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  p {
    text-align: center;
  }

  section {
    margin-top: 2rem;
  }

  ul {
    list-style: none;
    padding: 0;
  }

  li {
    margin-bottom: 0.5rem;
  }
</style>
